<!DOCTYPE html>
<html>
<head>
<title>GP Feedback Prototype</title>
</head>
<body>

  <!-- Start of radio buttons -->
  <form method="get" class="form" action="">
    <fieldset>
      <legend>
        <h2 class="">Do you want to?</h2>
      </legend>

      <!-- Feedback -->
      <div class="multiple-choice">
      <label>
        <input id="radio-1" type="radio" name="action" value="feedback" checked>
        Leave feedback
      </label>
      </div>
      <!-- -->

      <!-- Complaint -->
      <div class="multiple-choice">
      <label>
        <input id="radio-2" type="radio" name="action" value="complaint">
        Make a complaint
      </label>
      </div>
      <!-- -->

      <!-- Help -->
      <p>Or</p>
      <div class="multiple-choice">
      <label>
        <input id="radio-3" type="radio" name="action" value="help">
        I need help
      </label>
      </div>
      <!-- -->

    </fieldset>
    <input type=submit class="button" value=Submit>
  </form>
  <!-- End of radio buttons -->

</body>
</html>
