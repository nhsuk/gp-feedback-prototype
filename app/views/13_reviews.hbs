<h2>Reviews for {{surgeryName}}</h2>

<div class="grid-row">
  {{#each reviews as |review|}}
    <div class="results {{#if review.gpResponse}}gp-response--remove-border{{/if}} ">
      <h3 class="results__title">{{review.title}}</h3>
      <div class="results__date">{{review.screenName}}, {{review.monthOfVisit}}</div>
      <li class="results__item results__item--nearby">
        <div class="results__details">
           <p>{{review.userReview}}</p>
        </div>
      </li>
    </div>
    {{#if review.gpResponse}}
    <div class="gp-response">
      <div class="gp-response__item">
        <div class="gp-response__details">
          <h4 class="gp-response--heading">Surgery Response</h4>
          <p class="gp-response--paragraph">{{review.gpResponse}}</p>
        </div>
      </div>
    </div>
    {{/if}}
  {{/each}}
</div>
